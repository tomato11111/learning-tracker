# Server Configuration
PORT=3000
NODE_ENV=development

# Production Domain (本番環境のドメイン)
# 例: https://yourapp.yourdomain.com
PRODUCTION_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=passive_learning_tracker

# AI API Configuration (Gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here

# CORS Settings
# 開発環境: chrome-extension://,http://localhost:3000
# 本番環境: chrome-extension://,https://yourapp.yourdomain.com
ALLOWED_ORIGINS=chrome-extension://,http://localhost:3000

# Security Settings
# 本番環境では必ず true に設定
ENABLE_HTTPS_ONLY=false

# Logging
LOG_LEVEL=info
